@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous" />
    <style>
        body {
            background: url("https://cdn.discordapp.com/attachments/783349060580016158/1159814931156303893/2022-07-03-Windows_XP.jpg.png?ex=653264d3&is=651fefd3&hm=aae141f66f6a9783ff0bda8a0d8a77d1591905ae5dcf590f114b6f3f8735aa6e&");
        }

        .grijs {
            background-color: rgba(202, 202, 202, 0.678);
            width: 500px;
            height: 600px;
            border-radius: 25px;
        }
    </style>

    <div class="d-flex align-items-center justify-content-center container vh-100">
        <div class="justify-content-center">
            <div class="d-flex flex-column align-items-center justify-content-center grijs">
                <form class="w-50">
                    <input type="email" class="form-control mb-3" placeholder="Email" />
                    <input type="password" class="form-control mb-3" placeholder="Password" />
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
